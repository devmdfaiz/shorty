{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"skipLibCheck": true,
		"allowJs": false,
		"outDir": "./dist",
		// "rootDir": "./src",
		"rootDir": ".",
		"types": ["node"],
		"strict": true,
		"paths": {
			"@/*": ["./src/*"],
			"@tests/*": ["./tests/*"]
		}
	},
	// "include": ["./src/**/*.ts", "./test/**/*.ts"],
	"include": ["./src/**/*.ts", "./tests/**/*.ts"],
	"exclude": ["node_modules", "dist", "drizzle.config.ts", "vite.config.ts"]
}
